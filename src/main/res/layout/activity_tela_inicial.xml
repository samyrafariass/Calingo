            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/icon_like"
            app:layout_constraintStart_toEndOf="@id/curtida_arrudear1"
            app:layout_constraintStart_toStartOf="@id/container_txt2"
            app:layout_constraintTop_toBottomOf="@id/frase_arrudear1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:text="|"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_like_arrudear1"
            app:layout_constraintStart_toStartOf="@id/container_txt2"
            app:layout_constraintTop_toBottomOf="@id/frase_arrudear1" />


        <TextView
