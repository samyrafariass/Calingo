<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaInicial">

        <View
            android:id="@+id/containerExpressao"
            style="@style/Container_expressao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/container_txt"
            style="@style/Container_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt1_expressao"
            style="@style/Text_view_expressao"
            android:text="Expressão do dia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/container_txt"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/traco_entre_palavras"
            android:layout_width="62dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/container_txt"
            app:layout_constraintTop_toBottomOf="@id/txt1_expressao"
            app:layout_constraintEnd_toEndOf="@id/container_txt"
            />

        <TextView
            android:id="@+id/txt2_expressao"
            style="@style/Text_view_expressao"
            android:text="Tabacudo"
            app:layout_constraintEnd_toEndOf="@+id/container_txt"
            app:layout_constraintStart_toStartOf="@+id/container_txt"
            app:layout_constraintTop_toBottomOf="@+id/traco_entre_palavras"
            />

        <TextView
            android:id="@+id/txt1_container"
            style="@style/Text_view_expressao"
            android:text="Significado"
            app:layout_constraintEnd_toEndOf="@+id/containerExpressao"
            app:layout_constraintStart_toStartOf="@+id/containerExpressao"
            app:layout_constraintTop_toBottomOf="@+id/container_txt"
            />

        <TextView
            android:id="@+id/txt2_container"
            style="@style/Text_view_expressao"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:text="Expressão informal que significa bobo, tolo ou ingênuo. Pode ser usada de forma cômica ou pejorativa, dependendo do tom e do contexto. Em algumas situações, também pode indicar alguém desastrado ou que comete erros frequentes."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/containerExpressao"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/containerExpressao"
            app:layout_constraintTop_toBottomOf="@+id/txt1_container" />

        <View
            android:id="@+id/container_txt2"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/container_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerExpressao" />

